{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GeometryRules",
  "type": "object",
  "properties": {
    "minButtonPaddingY": {
      "type": "number",
      "minimum": 0,
      "maximum": 50
    },
    "minButtonPaddingX": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "allowedIconSizes": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 8,
        "maximum": 128
      },
      "minItems": 1
    },
    "allowedRadius": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 64
      },
      "minItems": 1
    }
  },
  "required": ["allowedIconSizes", "allowedRadius"]
}
