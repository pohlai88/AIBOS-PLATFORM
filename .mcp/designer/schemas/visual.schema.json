{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VisualRules",
  "type": "object",
  "properties": {
    "allowedSurfaceRoles": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]+$"
      },
      "minItems": 1
    },
    "forbiddenEffects": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]+$"
      },
      "minItems": 0
    }
  },
  "required": ["allowedSurfaceRoles"]
}
