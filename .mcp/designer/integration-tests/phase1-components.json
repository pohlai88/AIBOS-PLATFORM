{
    "$schema": "https://aibos.dev/schemas/integration-tests-phase1.json",
    "phase": "component-validation",
    "description": "Validate rendering, behavior, and design compliance of all UI components.",
    "components": [
        {
            "name": "Button",
            "sizes": [
                "sm",
                "md",
                "lg"
            ],
            "variants": [
                "primary",
                "secondary",
                "destructive",
                "outline"
            ],
            "tests": [
                "render:variant",
                "render:size",
                "interaction:click",
                "interaction:keyboard",
                "disabled:state",
                "loading:state",
                "composition:icon+label",
                "design:tokens",
                "design:geometry",
                "design:spacing",
                "design:radius",
                "design:typography",
                "theme:dlbb",
                "theme:tenant-default",
                "mode:safe",
                "mode:aaa"
            ]
        },
        {
            "name": "Input",
            "tests": [
                "render:default",
                "controlled:value",
                "controlled:onChange",
                "error:state",
                "disabled:state",
                "design:spacing",
                "design:radius",
                "design:tokens"
            ]
        },
        {
            "name": "Checkbox",
            "tests": [
                "render",
                "checked",
                "unchecked",
                "indeterminate",
                "disabled",
                "keyboard:space",
                "design:excluded:buttonPadding",
                "design:allowed:radius",
                "design:tokens"
            ]
        },
        {
            "name": "Radio",
            "tests": [
                "render",
                "checked",
                "unchecked",
                "disabled",
                "keyboard:arrow",
                "design:excluded:buttonPadding",
                "design:tokens"
            ]
        },
        {
            "name": "Toggle",
            "tests": [
                "render",
                "state:on",
                "state:off",
                "interaction:click",
                "design:excluded:buttonPadding",
                "design:tokens",
                "design:radius"
            ]
        },
        {
            "name": "Avatar",
            "tests": [
                "render",
                "fallback:initials",
                "size:40",
                "size:48",
                "design:allowed:radius9999",
                "design:tokens"
            ]
        },
        {
            "name": "Badge",
            "tests": [
                "render",
                "variant",
                "design:allowed:padding2",
                "design:allowed:radius9999",
                "design:tokens"
            ]
        },
        {
            "name": "Tooltip",
            "tests": [
                "render",
                "interaction:hover",
                "interaction:keyboard",
                "design:allowed:padding6"
            ]
        },
        {
            "name": "Spinner",
            "tests": [
                "render",
                "size",
                "design:excluded:frameWidth"
            ]
        },
        {
            "name": "Card",
            "sizes": [
                "sm",
                "md",
                "lg"
            ],
            "tests": [
                "render",
                "slot:header",
                "slot:footer",
                "composition",
                "design:spacing",
                "design:radius",
                "design:tokens"
            ]
        },
        {
            "name": "Heading",
            "levels": [
                "h1",
                "h2",
                "h3",
                "h4",
                "h5",
                "h6"
            ],
            "tests": [
                "render",
                "design:typography",
                "design:tokens"
            ]
        },
        {
            "name": "LineChart",
            "tests": [
                "render",
                "data:points",
                "axis:labels",
                "tooltip:hover",
                "theme:tenant",
                "mode:safe",
                "design:tokens",
                "design:visual"
            ]
        }
    ]
}