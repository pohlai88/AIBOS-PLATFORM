{
  "$schema": "https://aibos.dev/schemas/integration-tests-phase3.json",
  "phase": "application-flows",
  "description": "Validate full end-to-end user flows across the live application.",
  "flows": [
    {
      "name": "Auth â†’ Dashboard",
      "steps": [
        "visit:/auth/login",
        "input:email",
        "input:password",
        "submit",
        "redirect:/dashboard",
        "validate:charts",
        "validate:widgets",
        "design:validate-page"
      ]
    },
    {
      "name": "Create Record Flow",
      "steps": [
        "visit:/records",
        "click:new",
        "fill:form-fields",
        "submit",
        "toast:success",
        "validate:new-record-rendered"
      ]
    },
    {
      "name": "Profile Update",
      "steps": [
        "visit:/settings/profile",
        "modify:name",
        "modify:avatar",
        "submit",
        "validate:profile-updated",
        "theme:inherit"
      ]
    },
    {
      "name": "Dark Mode & Safe Mode Switching",
      "steps": [
        "visit:/dashboard",
        "toggle:dark-mode",
        "toggle:safe-mode",
        "validate:tokens",
        "validate:spacing",
        "validate:radius",
        "validate:aaa"
      ]
    }
  ]
}

