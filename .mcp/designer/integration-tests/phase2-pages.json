{
  "$schema": "https://aibos.dev/schemas/integration-tests-phase2.json",
  "phase": "page-validation",
  "description": "Validate Next.js page-level behavior including RSC, hydration, layouts, and interactions.",
  "routes": [
    {
      "path": "/",
      "tests": [
        "rsc:render",
        "hydration",
        "layout:root",
        "theme:inherit",
        "mode:safe",
        "design:validate"
      ]
    },
    {
      "path": "/dashboard",
      "tests": [
        "rsc:render",
        "hydration",
        "layout:dashboard",
        "data:server",
        "streaming:suspense",
        "charts:render",
        "charts:data-mapping",
        "theme:tenant",
        "design:validate"
      ]
    },
    {
      "path": "/settings/profile",
      "tests": [
        "rsc:render",
        "hydration",
        "form:controlled",
        "error:state",
        "save:flow",
        "design:validate"
      ]
    },
    {
      "path": "/auth/login",
      "tests": [
        "rsc:render",
        "client:form",
        "controlled:inputs",
        "keyboard:flow",
        "error:invalid-credentials",
        "redirect:after-login"
      ]
    }
  ]
}

