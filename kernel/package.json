{
    "name": "@aibos/kernel",
    "version": "0.1.0",
    "private": true,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch index.ts",
        "lint": "eslint . --config ../eslint.config.mjs",
        "lint:dir": "tsx scripts/dir-lint.ts",
        "start": "node dist/index.js",
        "typecheck": "tsc --noEmit",
        "db:migrate": "tsx scripts/migrate.ts up",
        "db:rollback": "tsx scripts/migrate.ts rollback",
        "db:status": "tsx scripts/migrate.ts status",
        "metadata:validate": "tsx metadata/__tests__/validate-phase1.ts",
        "metadata:validate-phase2": "tsx metadata/__tests__/validate-phase2.ts",
        "metadata:validate-phase3": "tsx metadata/__tests__/validate-phase3.ts",
        "metadata:validate-complete": "tsx metadata/__tests__/validate-complete.ts",
        "metadata:test-e2e": "tsx metadata/__tests__/test-end-to-end-workflow.ts",
        "metadata:test-e2e-supabase": "tsx metadata/__tests__/test-e2e-with-supabase.ts",
        "test": "vitest",
        "test:unit": "vitest run --dir metadata/mcp/__tests__/unit",
        "test:integration": "vitest run --dir metadata/mcp/__tests__/integration",
        "test:e2e": "vitest run --dir metadata/mcp/__tests__/e2e",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@hono/node-server": "^1.13.7",
        "@modelcontextprotocol/sdk": "^1.0.0",
        "@opentelemetry/api": "^1.9.0",
        "@supabase/supabase-js": "^2.45.4",
        "dotenv": "^17.2.3",
        "hono": "^4.7.9",
        "ioredis": "^5.6.1",
        "jose": "^6.1.2",
        "node-cron": "^4.2.1",
        "openapi-types": "^12.1.3",
        "pg": "^8.13.1",
        "pino": "^10.1.0",
        "prom-client": "^15.1.3",
        "zod": "3"
    },
    "devDependencies": {
        "@aibos/config-eslint": "0.1.0",
        "@types/node": "^22.19.1",
        "@types/pg": "^8.11.10",
        "@vitest/coverage-v8": "^2.1.9",
        "eslint": "^9.39.1",
        "pino-pretty": "^13.1.2",
        "tsx": "^4.19.2",
        "typescript": "^5.9.3",
        "vitest": "^2.1.9"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.0"
}