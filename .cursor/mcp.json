{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "git": {
      "command": "npx",
      "args": ["-y", "mcp-git@latest"]
    },
    "shell": {
      "command": "npx",
      "args": ["-y", "mcp-shell@latest"],
      "permissions": {
        "allowedCommands": [
          "pnpm install",
          "pnpm run lint",
          "pnpm run build",
          "npx tailwindcss",
          "turbo run dev",
          "turbo run build",
          "turbo run lint"
        ]
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "mcp-playwright@latest"]
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"]
    },
    "aibos-theme": {
      "command": "node",
      "args": [".mcp/theme/server.mjs"]
    },
    "aibos-filesystem": {
      "command": "node",
      "args": [".mcp/filesystem/server.mjs"]
    },
    "aibos-documentation": {
      "command": "node",
      "args": [".mcp/documentation/server.mjs"]
    },
    "aibos-ui-generator": {
      "command": "node",
      "args": [".mcp/ui-generator/server.mjs"]
    },
    "aibos-component-generator": {
      "command": "node",
      "args": [".mcp/component-generator/server.mjs"]
    },
    "aibos-a11y-validation": {
      "command": "node",
      "args": [".mcp/a11y/server.mjs"]
    },
    "aibos-convention-validation": {
      "command": "node",
      "args": [".mcp/convention-validation/server.mjs"]
    },
    "aibos-react-validation": {
      "command": "node",
      "args": [".mcp/react/server.mjs"]
    },
    "aibos-designer": {
      "command": "npx",
      "args": ["tsx", ".mcp/designer/server.ts"]
    },
    "zod": {
      "url": "https://mcp.inkeep.com/zod/mcp"
    }
  }
}
