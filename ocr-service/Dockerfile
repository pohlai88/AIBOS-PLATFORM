FROM python:3.11-slim

# Install Tesseract and dependencies
RUN apt-get update && \
    apt-get install -y \
      tesseract-ocr \
      tesseract-ocr-eng \
      libtesseract-dev \
      curl \
      poppler-utils && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY main.py .

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "2"]

